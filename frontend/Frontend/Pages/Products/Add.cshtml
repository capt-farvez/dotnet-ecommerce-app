@page
@model Frontend.Pages.Products.AddModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-primary text-black">
                    <h4 >Add New Product</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Product.Name" class="form-label">Name</label>
                            <input asp-for="Product.Name" class="form-control" />
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.ImageUrl" class="form-label">Image URL</label>
                            <input asp-for="Product.ImageUrl" class="form-control" />
                            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.Price" class="form-label">Price</label>
                            <input asp-for="Product.Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.VendorId" class="form-label">Vendor ID</label>
                            <input asp-for="Product.VendorId" class="form-control" />
                            <span asp-validation-for="Product.VendorId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Add Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
