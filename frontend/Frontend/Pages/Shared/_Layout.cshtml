<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]E-Bazaar </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-100 text-gray-900">

    <header class="bg-white shadow mb-6">
        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <h1 class="text-xl font-bold">🛒 E-Bazaar </h1>
            <nav>
                <a href="/Products" class="text-blue-600 hover:underline mr-4">Products</a>
                <a href="/Products/add" class="text-blue-600 hover:underline mr-4">Add Products</a>
                <a href="/Cart" class="text-blue-600 hover:underline">Cart</a>
            </nav>
        </div>
    </header>

    <main class="max-w-7xl mx-auto px-4">
        @RenderBody()
    </main>

    <footer class="text-center text-gray-500 py-6 mt-10">
        &copy; @DateTime.Now.Year - Anowar Hossen Farvez
    </footer>
    @RenderSection("Scripts", required: false)

</body>
</html>